{
    "$schema": "https://schema.railpack.com",
    "steps": {
        "install": {
            "commands" : ["..."]
        },
        "build" : {
            "commands": [
                "...",
                "php bin/console doctrine:migrations:migrate --no-interaction --env=$APP_ENV || true",
                "mkdir /app && cp -R . /app"
            ]
        }   
    },
    "deploy" : {
        "startCommand" : "php -S 0.0.0.0:8000 -t public",
        "inputs": [
            {
                "step": "build",
                "include": ["/app"]
            }
        ],
        "paths": [],
        "base": null
    }
}